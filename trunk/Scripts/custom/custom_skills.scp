					SYSMESSAGE @,,2 1049539
					ACT.EFFECT 3,i_fx_sparkle,16,30
					ACT.SOUND 1420
				ELSE
					CTAG.FIXMUSIC=1
					TIMERF 5,CTAG.FIXMUSIC
					MESSAGE @,,2 501599
					SKILLGAIN Enticement <EVAL (<ENTICEMENT>/10)+1>
				ENDIF
			ENDIF

		ELSE
