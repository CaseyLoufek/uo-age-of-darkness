[ITEMDEF i_friend_ring] 
ID=i_ring_gold
NAME=Ring of Friendship
VALUE=1000

ON=@CREATE
COLOR=0045


ON=@DCLICK
IF !(<TIMER> > 0 )
	IF (<LINK>=04fffffff)
		TARGET Who is your friend?
	ELSE
		IF !(<LINK.ISONLINE>)
			SRC.SYSMESSAGE <Link.Name> is not awake.
		ELIF (<SRC.MAP(<MOREP>).REGION.FLAGS>&region_antimagic_recall_in) || (<LINK.REGION.FLAGS>&region_antimagic_recall_out)
			SRC.SYSMESSAGE You cannot send a teleport stone from here to there.
		ELSE
			SRC.SYSMESSAGE You send a teleport stone to your friend.
			LINK.SYSMESSAGE <SRC.NAME> has sent you a teleport stone to join them in <SRC.REGION.NAME>.
			LINK.NEWITEM=i_friend_transport
			NEW.NAME=Teleport Stone for <LINK.NAME>.
			NEW.TAG.USER=<LINK.UID>
			NEW.P=<LINK.P>
			NEW.MOREP=<SRC.P>
			TIMER = 600
		ENDIF
	ENDIF 
ELSE
	SRC.SYSMESSAGE You must wait for the ring to recharge.
ENDIF 


ON=@TARGON_CHAR 
IF !(<SRC.TARG.NPC>) 
	IF !(<SRC.UID>=<SRC.TARG.UID>)
		SAY Ring is now linked to <LINK.NAME>
		ATTR=attr_newbie
		NAME=Ring of Friendship to <LINK.NAME>
		LINK=<SRC.TARG.UID>
	ELSEIF (<SRC.UID>=<SRC.TARG.UID>) 
		SAY You can't select yourself! 
	ENDIF 
ELSE 
	SAY Target must be a player! 
ENDIF 


ON=@TARGON_ITEM 
SAY That isn't a live creature! 

ON=@TARGON_GROUND 
SAY That isn't a live creature! 

ON=@TIMER
RETURN 1

 
