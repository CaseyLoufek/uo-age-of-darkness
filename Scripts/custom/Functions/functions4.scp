[FUNCTION GETGUILD]
IF (<ISPLAYER>)
	IF (<ISGM>)
	RETURN Staff
	ELSEIF (<flags>&statf_incognito) || !(<guild>)
	RETURN [none]
	ELSE
	RETURN <guild.name>
	ENDIF
ELSE
RETURN 0
ENDIF

