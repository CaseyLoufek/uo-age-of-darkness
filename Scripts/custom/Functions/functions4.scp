[FUNCTION ispk]
IF (!(<ISPLAYER>))
	IF (<KARMA> < -2000)
	RETURN 1
	ELSE
	RETURN 0
	ENDIF
ENDIF
IF (<KILLS> > <SERV.MURDERMINCOUNT>)
RETURN 1
ENDIF
RETURN 0

