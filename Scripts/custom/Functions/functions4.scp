[function becriminal]
IF !(<iscriminal>)
	IF !(<findid.i_criminal_timer>)
	flags |= statf_criminal
	serv.newitem i_criminal_timer
	equip <new>
	sysmessageloc -1,502275
	ENDIF
ENDIF

[itemdef i_criminal_timer]
ID=i_memory
TYPE=t_eq_script
NAME=criminal timer

ON=@Equip
timer=<HVAL 60*<SERV.CRIMINALTIMER>>

ON=@Timer
cont.flags &= ~statf_criminal
remove
return 1

