[FUNCTION f_material_i_log]

[FUNCTION f_material_i_log_birch]
TAG0.MATERIAL=i_log_birch
tag.basematerial=i_log
NAME=birch <NAME>
COLOR=color_o_birch
IF (<TYPE>==t_weapon_bow) || (<TYPE>==t_weapon_xbow)
	TAG.VELOCITY += 12
ELSEIF (<ISWEAPON>)
	TAG0.SWINGINCREASE += 20
ELSEIF (<ISARMOR>) || (<TYPE>==t_shield)
	modar = <MulDiv <ARMOR.HIGH>,20,100>
ENDIF
new.tag0.modvalue += (5*<RESOURCES.1.VAL>)

[FUNCTION f_material_i_log_cyprus]
TAG0.MATERIAL=i_log_cyprus
tag.basematerial=i_log
NAME=cypress <NAME>
COLOR=color_o_cyprus
HITPOINTS += <MulDiv <HITPOINTS>,40,100>
new.tag0.modvalue += (5*<RESOURCES.1.VAL>)

[FUNCTION f_material_i_log_cedar]
