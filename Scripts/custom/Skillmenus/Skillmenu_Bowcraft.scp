ELSEIF (<LOCAL.TYPE>==1) // create item
	f_skmenu_bowcraft_makeitem <DEF.skmenu_bowcraft_<SRC.dCtag0.SKMENU_bowcraft_LASTCATEGORY>_<dLOCAL.INDEX>>
ELSEIF (<LOCAL.TYPE>==2) // item details
	DIALOG d_skillmenu_bowcraft_details 0, <LOCAL.INDEX>
ELSEIF (<LOCAL.TYPE>==3) // create item (last ten)
	f_skmenu_bowcraft_makeitem <SRC.Ctag0.SKMENU_bowcraft_LASTTEN_<dLOCAL.INDEX>>
ELSEIF (<LOCAL.TYPE>==4) // item details (last ten) [this is redundant]
	DIALOG d_skillmenu_bowcraft_details 0, <LOCAL.INDEX>
ELSEIF (<LOCAL.TYPE>==5) //resource selected
	IF (<DEF.skmenu_bowcraft_subres_<dLOCAL.INDEX>>)
		LOCAL.NUMBER = <DEF.SKMENU_SUBRES_<DEF.skmenu_bowcraft_subres_<dLOCAL.INDEX>>_SKILL>
		IF (<LOCAL.NUMBER> > <SRC.bowcraft>)
			SRC.CTAG.SKMENU_bowcraft_NOTICE You cannot work this strange and unusual material.
			DIALOG d_skillmenu_bowcraft 0, 1
			RETURN 1
		ENDIF
		SRC.CTAG0.SKMENU_SUBRES=<DEF.skmenu_bowcraft_subres_<dLOCAL.INDEX>>
		SRC.CTAG0.SKMENU_SUBRES_SKILL=<LOCAL.NUMBER>
		SRC.CTAG0.SKMENU_SUBRES_BASE=<DEF.skmenu_bowcraft_subres_0>
		SRC.CTAG.SKMENU_bowcraft_NOTICE Material: <serv.itemdef.<SRC.CTAG0.SKMENU_SUBRES>.name>
		DIALOG d_skillmenu_bowcraft
	ENDIF
ELSEIF (<LOCAL.TYPE>==6) //misc
	IF (<LOCAL.INDEX>==0) //resource selection
		IF (<DEF0.skmenu_bowcraft_subres_0>)
			DIALOG d_skillmenu_bowcraft 0, 1
		ENDIF
	ELSEIF (<LOCAL.INDEX>==1) //resmelt
		IF (<DEF0.skmenu_bowcraft_flags>&02)
			f_skmenu_bowcraft_smelt
		ENDIF
	ELSEIF (<LOCAL.INDEX>==2) //make last
		IF (<SRC.Ctag0.SKMENU_bowcraft_LASTTEN_0>)
			f_skmenu_bowcraft_makeitem <SRC.Ctag0.SKMENU_bowcraft_LASTTEN_0>
		ELSE
			SRC.Ctag0.SKMENU_bowcraft_NOTICE You haven't made anything yet.
			DIALOG d_skillmenu_bowcraft
		ENDIF
	ELSEIF (<LOCAL.INDEX>==3) //last 10 items made
		SRC.Ctag0.SKMENU_bowcraft_LASTCATEGORY=-1
		DIALOG d_skillmenu_bowcraft
	ELSEIF (<LOCAL.INDEX>==4) // Toggle use resource hue
		SRC.Ctag0.SKMENU_bowcraft_DONOTCOLOR ^= 1
		DIALOG d_skillmenu_bowcraft 0, 1
	ELSEIF (<LOCAL.INDEX>==5) //repair
		IF (<DEF0.skmenu_bowcraft_flags>&04)
			SRC.REPAIRITEM
		ENDIF
	ELSEIF (<LOCAL.INDEX>==6) //toggle mark option
		IF (<DEF0.skmenu_bowcraft_flags>&01)
			DOSWITCH <SRC.Ctag0.SKMENU_bowcraft_MARKOPTION>
			SRC.Ctag0.SKMENU_bowcraft_MARKOPTION = 1
			SRC.Ctag0.SKMENU_bowcraft_MARKOPTION = 2
			SRC.Ctag0.SKMENU_bowcraft_MARKOPTION = 0
			ENDDO
		ENDIF
		DIALOG d_skillmenu_bowcraft
	ELSEIF (<LOCAL.INDEX>==8) //enhance
		IF (<DEF0.skmenu_bowcraft_flags>&08)
			//f_skmenu_bowcraft_enhance
		ENDIF
	ENDIF
ENDIF

