//////////////////////////////////////////////////////////////////////////////////////////////////////////////
//MAIN FUNCTIONS
//Here there are the "core" functions that control the crafting procedure. 
//////////////////////////////////////////////////////////////////////////////////////////////////////////////

[FUNCTION f_skmenu_Bowcraft_cancraft]
//this must be edited out for different skillmenus (because, for example, bowcraft doesn't need anvil & forge)
IF (<TAG0.HITS><=0)
	SRC.Ctag0.SKMENU_Bowcraft_NOTICE You have worn out your tool!
	RETURN 0
ELSEIF (<CONT.TOPOBJ.UID>!=<SRC.UID>)
	SRC.Ctag0.SKMENU_Bowcraft_NOTICE The tool must be on your person to use.
	RETURN 0
ENDIF
RETURN 1

//This is the main craft function
[FUNCTION f_skmenu_bowcraft_makeitem]
//preliminary checks
IF (<SRC.ACTION>!=-1) || (<SRC.CTAG0.CRAFTING>)
	SRC.SYSMESSAGE You must wait to perform another action
	RETURN 1
ENDIF
IF !(<f_skmenu_bowcraft_cancraft>)
	DIALOG d_skillmenu_bowcraft
	RETURN 1
ELSEIF !(<SRC.CANMAKESKILL <ARGS>>)
	SRC.Ctag0.SKMENU_bowcraft_NOTICE You don't have the required skills to attempt this item.
	DIALOG d_skillmenu_bowcraft
	RETURN 1
ENDIF

//check resources
	IF (<SRC.Ctag0.SKMENU_SUBRES>)
		LOCAL.RESOURCES=<f_resource_replace <ARGS>,<SRC.CTAG0.SKMENU_SUBRES_BASE>,<SRC.CTAG0.SKMENU_SUBRES>>
	ELSE
		LOCAL.RESOURCES=<SERV.ITEMDEF.<ARGS>.RESOURCES>
	ENDIF

IF !(<SRC.RESTEST <LOCAL.RESOURCES>>)
	SRC.Ctag0.SKMENU_bowcraft_NOTICE You don't have the resources required to make that item.
	DIALOG d_skillmenu_bowcraft
	RETURN 1
ENDIF
SRC.CONSUME <LOCAL.RESOURCES>

//update the "last ten" list
IF (<ARGS>!=<SRC.Ctag0.SKMENU_bowcraft_LASTTEN_0>) 
	FOR 9 1
		TRY SRC.Ctag0.SKMENU_bowcraft_LASTTEN_<dLOCAL._FOR> = <SRC.Ctag0.SKMENU_bowcraft_LASTTEN_<EVAL <LOCAL._FOR>-1>>
	ENDFOR
	SRC.Ctag0.SKMENU_bowcraft_LASTTEN_0 <ARGS>
ENDIF

//start crafting
SERV.NEWITEM i_bowcraft_craft
NEW.CONT=<SRC.UID>
NEW.TAG.SUBRES=<SRC.Ctag0.SKMENU_SUBRES>
SRC.CTAG0.CRAFTING=1
NEW.LINK=<UID> //linked to the tool
NEW.TIMER=1
NEW.tag0.ITEM=<ARGS>
NEW.TAG.SUBRESUSED=<TAG.SUBRESUSED>
NEW.TAG.RESOURCES=<LOCAL.RESOURCES>
SRC.ANIM 11
SRC.EVENTS +e_bowcraft_crafting

//This is the memory item used for the crafting
[ITEMDEF i_bowcraft_craft]
ID=02007
NAME=bowcraft craft memory
TYPE=t_eq_script

ON=@CREATE
MOREX={2 4}

ON=@TIMER	
CONT.SFX 05ab
CONT.SALUTE
MOREX -= 1
IF (<MOREX>)
	TIMER 1
	RETURN 1
ENDIF

IF (<SERV.ITEMDEF.<TAG0.ITEM>.CAN>&CAN_I_REPLICATE)

LOCAL.FIRSTFREE=0
WHILE ((<CONT.RESTEST <TAG.RESOURCES>>) || (<LOCAL.FIRSTFREE>==0))//&& (<LINK.TAG0.HITS><=0)
	IF (<LOCAL.FIRSTFREE>==0)
		LOCAL.FIRSTFREE=1
	ELSE
		CONT.CONSUME <TAG.RESOURCES>
	ENDIF
	LOCAL.CHANCE=<CONT.f_skmenu_successchance <tag0.ITEM>, <LINK.UID>>
	IF (RAND(1000)<<LOCAL.CHANCE>) //success! we can create the item
		SERV.NEWITEM <tag0.ITEM> 
		LOCAL.EXCEP=<CONT.f_skmenu_exceptionalchance <tag0.ITEM>, <LINK.UID>>
		VAR.ARGN1=<LOCAL.EXCEP>
		VAR.ARGN2=<UID> //bowcraft crafting memory link, use to find/change material (tag.subres)
		LINK.TRIGGER=@MakeItem
		LOCAL.EXCEP=<VAR.ARGN1>
		NEW.CONT=<CONT.FINDLAYER.21.UID>
		CONT.SOUND 057
		IF <TAG0.SUBRESUSED>
			TRY NEW.f_material_<TAG.SUBRES>
		ENDIF
		IF (RAND(1000)<<LOCAL.EXCEP>)
			NEW.QUALITY=201
			IF (<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>==0)
				NEW.tag0.CRAFTEDBY=<CONT.name>
			ELSEIF (<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>==2)
				CONT.Ctag0.SKMENU_bowcraft_TOOL=<LINK.UID>
				TRYSRC <CONT.UID> NEW.DIALOG d_skillmenu_bowcraft_querymakersmark
				LOCAL.NODIALOG=1
			ENDIF
			IF (<NEW.ISARMOR>) || (<NEW.TYPE>==t_shield) || (<NEW.TYPE>==t_clothing)
				NEW.HITPOINTS += <EVAL (<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>)/50>+5
				local.one = <eval (<new.armor.hi> * ((<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>) + 250))>
				local.two = <eval (<local.one> / 5000)>
				new.modar += <dlocal.two>
				new.tag0.modvalue += <EVAL (<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>)/50>+5
				CONT.SKILLGAIN armslore <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
			ELSEIF (<NEW.ISWEAPON>)	
				NEW.HITPOINTS += <EVAL (<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>)/50>+5
				NEW.tag0.DAMINCREASE += <EVAL (<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>)/50>+5
				new.tag0.modvalue += <EVAL (<CONT.ARMSLORE>+<CONT.SKILLMOD Armslore>)/50>+5
				CONT.SKILLGAIN armslore <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
			ENDIF
			NEW.NAME=exceptional <NEW.NAME>
		ELSE
			NEW.QUALITY=<EVAL (<LOCAL.CHANCE>+<LOCAL.EXCEP>)/10> //arbitrary formula for quality calculation
		ENDIF
		local.exp = (<eval (rand(<NEW.VALUE>+<NEW.tag0.MODVALUE>)+rand(<NEW.VALUE>+<NEW.tag0.MODVALUE>))/4>)
		cont.Trigger @ExpChange,<def.TAT_AS_ARGN>,<local.exp>,1,1
		NEW.RESENDTOOLTIP
		IF (<LOCAL.CHANCE><1000) //gain skill only if the crafting was not trivial
			CONT.SKILLGAIN bowcraft <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
		ENDIF
	ELSE
		IF <cont.skillcheck LUMBERJACKING <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
			LOCAL.I=1
			WHILE (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL> > 0)
				IF (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>==<CONT.CTAG0.SKMENU_SUBRES_BASE>)
					NEWITEM <CONT.CTAG0.SKMENU_SUBRES>
					NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/2)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
				ELSE
					NEWITEM <SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>
					NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/2)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
				ENDIF
				LOCAL.I += 1
			ENDWHILE
		ELSE
			LOCAL.I=1
			WHILE (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL> > 0)
				IF (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>==<CONT.CTAG0.SKMENU_SUBRES_BASE>)
					NEWITEM <CONT.CTAG0.SKMENU_SUBRES>
					NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/3)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
				ELSE
					NEWITEM <SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>
					NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/3)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
				ENDIF
				LOCAL.I += 1
			ENDWHILE
		ENDIF

		IF (<CONT.bowcraft><30.0) //skill gain on failure only under 30.0 bowcraft
			CONT.SKILLGAIN bowcraft 1
		ENDIF
	ENDIF
ENDWHILE
LINK.TAG0.HITS -= 1 //damage the tool
IF (<LINK.TAG0.HITS><=0)
	LINK.REMOVE
	CONT.SYSMESSAGE You have worn out your tool!
	CONT.SYSMESSAGE You have created as many of this item as your resources allow.
	LOCAL.NODIALOG=1
ELSE
	LINK.RESENDTOOLTIP
	CONT.Ctag0.SKMENU_bowcraft_NOTICE You have created as many of this item as your resources allow.
ENDIF

ELSE

LOCAL.CHANCE=<CONT.f_skmenu_successchance <tag0.ITEM>, <LINK.UID>>
IF (RAND(1000)<<LOCAL.CHANCE>) //success! we can create the item
	SERV.NEWITEM <tag0.ITEM> 
	LOCAL.EXCEP=<CONT.f_skmenu_exceptionalchance <tag0.ITEM>, <LINK.UID>>
	VAR.ARGN1=<LOCAL.EXCEP>
	VAR.ARGN2=<UID> //bowcraft crafting memory link, use to find/change material (tag.subres)
	LINK.TRIGGER=@MakeItem
	LOCAL.EXCEP=<VAR.ARGN1>
	NEW.CONT=<CONT.FINDLAYER.21.UID>
	CONT.SOUND 057
	IF <TAG0.SUBRESUSED>
		TRY NEW.f_material_<TAG.SUBRES>
	ENDIF
	IF (RAND(1000)<<LOCAL.EXCEP>)
		NEW.QUALITY=201
		IF (<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>==0)
			NEW.tag0.CRAFTEDBY=<CONT.name>
		ELSEIF (<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>==2)
			CONT.Ctag0.SKMENU_bowcraft_TOOL=<LINK.UID>
			TRYSRC <CONT.UID> NEW.DIALOG d_skillmenu_bowcraft_querymakersmark
			LOCAL.NODIALOG=1
		ENDIF
		NEW.HITPOINTS += <eval ((<new.hitpoints>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
		new.tag0.modvalue += <EVAL ((<CONT.ARMSLORE>+<cont.skillmod armslore>)*<NEW.VALUE>)/400>
		IF (<NEW.ISARMOR>) || (<NEW.TYPE>==t_shield)
			new.modar += <eval ((<new.armor.hi>+<new.modar>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
			new.resfire += <eval ((<new.resfire>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
			new.rescold += <eval ((<new.rescold>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
			new.respoison += <eval ((<new.respoison>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
			new.resenergy += <eval ((<new.resenergy>) * (<cont.armslore>+<cont.skillmod armslore> + 250))/4000>
			CONT.SKILLGAIN armslore <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
		ELSEIF (<NEW.ISWEAPON>)	
			NEW.tag0.DAMINCREASE += <EVAL (<CONT.ARMSLORE>+<cont.skillmod armslore>+250)/40>
			CONT.SKILLGAIN armslore <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
		ENDIF
		NEW.NAME=exceptional <NEW.NAME>
	ELSE
		NEW.QUALITY=<EVAL (<LOCAL.CHANCE>+<LOCAL.EXCEP>)/10> //arbitrary formula for quality calculation
	ENDIF
	var.exp = (<eval rand(<NEW.VALUE>+<NEW.tag0.MODVALUE>)/((<cont.level>+1)/2)>)
	expeval <eval <var.exp>>
	cont.sysmessage You have gained <var.expmsg> experience.
	CONT.EXP += <eval <var.exp>>
	NEW.RESENDTOOLTIP
	LINK.TAG0.HITS -= 1 //damage the tool
	IF (<LINK.TAG0.HITS><=0)
		LINK.REMOVE
		CONT.SYSMESSAGE You have worn out your tool!
		IF (<NEW.QUALITY>>200) && !(<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>)
			CONT.SYSMESSAGE You create an exceptional quality item and affix your maker's mark.
		ELSEIF (<NEW.QUALITY>>200)
			CONT.SYSMESSAGE You create an exceptional quality item.
		ELSE
			CONT.SYSMESSAGE You create the item.
		ENDIF
		LOCAL.NODIALOG=1
	ELSE
		LINK.RESENDTOOLTIP
		IF (<NEW.QUALITY>>200) && !(<CONT.Ctag0.SKMENU_bowcraft_MARKOPTION>)
			CONT.Ctag0.SKMENU_bowcraft_NOTICE You create an exceptional quality item and affix your maker's mark.
		ELSEIF (<NEW.QUALITY>>200)
			CONT.Ctag0.SKMENU_bowcraft_NOTICE You create an exceptional quality item.
		ELSE
			CONT.Ctag0.SKMENU_bowcraft_NOTICE You create the item.
		ENDIF
	ENDIF
	IF (<LOCAL.CHANCE><1000) //gain skill only if the crafting was not trivial
		CONT.SKILLGAIN bowcraft <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
	ENDIF
ELSE
	LINK.TAG0.HITS -= 1
	IF (<LINK.TAG0.HITS><=0)
		LINK.REMOVE
		CONT.SYSMESSAGE You have worn out your tool!
		CONT.SYSMESSAGE You failed to create the item, and some of your materials are lost.
		LOCAL.NODIALOG=1
	ELSE
		LINK.RESENDTOOLTIP
		CONT.Ctag0.SKMENU_bowcraft_NOTICE You failed to create the item, and some of your materials are lost. //actually _all_ materials are lost, since they are consumed when the crafting starts
	ENDIF

	IF <cont.skillcheck LUMBERJACKING <eval <SERV.ITEMDEF.<TAG.ITEM>.SKILLMAKE.0.VAL>>>
		LOCAL.I=1
		WHILE (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL> > 0)
			IF (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>==<CONT.CTAG0.SKMENU_SUBRES_BASE>)
				NEWITEM <CONT.CTAG0.SKMENU_SUBRES>
				NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/2)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
			ELSE
				NEWITEM <SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>
				NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/2)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
			ENDIF
			LOCAL.I += 1
		ENDWHILE
	ELSE
		LOCAL.I=1
		WHILE (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL> > 0)
			IF (<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>==<CONT.CTAG0.SKMENU_SUBRES_BASE>)
				NEWITEM <CONT.CTAG0.SKMENU_SUBRES>
				NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/3)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
			ELSE
				NEWITEM <SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.KEY>
				NEW.AMOUNT=(<SERV.ITEMDEF.<TAG.ITEM>.RESOURCES.<LOCAL.I>.VAL>/3)
					IF !(<NEW.AMOUNT>==0)
						trysrc <cont> new.bounce
					ELSE
						NEW.REMOVE
					ENDIF
			ENDIF
			LOCAL.I += 1
		ENDWHILE
	ENDIF

	IF (<CONT.bowcraft><30.0) //skill gain on failure only under 30.0 bowcraft
		CONT.SKILLGAIN bowcraft 1
	ENDIF
ENDIF

ENDIF

