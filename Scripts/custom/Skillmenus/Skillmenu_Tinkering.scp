ELSEIF (<LOCAL.TYPE>==2) // item details
	DIALOG d_skillmenu_tinkering_details 0, <LOCAL.INDEX>
ELSEIF (<LOCAL.TYPE>==3) // create item (last ten)
	f_skmenu_tinkering_makeitem <SRC.CTAG0.SKMENU_tinkering_LASTTEN_<dLOCAL.INDEX>>
ELSEIF (<LOCAL.TYPE>==4) // item details (last ten) [this is redundant]
	DIALOG d_skillmenu_tinkering_details 0, <LOCAL.INDEX>
ELSEIF (<LOCAL.TYPE>==5) //resource selected
	IF (<DEF.skmenu_tinkering_subres_<dLOCAL.INDEX>>)
		LOCAL.NUMBER = <DEF.SKMENU_SUBRES_<DEF.skmenu_tinkering_subres_<dLOCAL.INDEX>>_SKILL>
		IF (<LOCAL.NUMBER> > <SRC.tinkering>)
			SRC.CTAG.SKMENU_tinkering_NOTICE You cannot work this strange and unusual material.
			DIALOG d_skillmenu_tinkering 0, 1
			RETURN 1
		ENDIF
		SRC.CTAG0.SKMENU_SUBRES=<DEF.skmenu_tinkering_subres_<dLOCAL.INDEX>>
		SRC.CTAG0.SKMENU_SUBRES_SKILL=<LOCAL.NUMBER>
		SRC.CTAG0.SKMENU_SUBRES_BASE=<DEF.skmenu_tinkering_subres_0>
		SRC.CTAG.SKMENU_tinkering_NOTICE Material: <serv.itemdef.<SRC.CTAG0.SKMENU_SUBRES>.name>
		DIALOG d_skillmenu_tinkering
	ENDIF
ELSEIF (<LOCAL.TYPE>==6) //misc
	IF (<LOCAL.INDEX>==0) //resource selection
		IF (<DEF0.skmenu_tinkering_subres_0>)
			DIALOG d_skillmenu_tinkering 0, 1
		ENDIF
	ELSEIF (<LOCAL.INDEX>==1) //resmelt
		IF (<DEF0.skmenu_tinkering_flags>&02)
			f_skmenu_tinkering_smelt
		ENDIF
	ELSEIF (<LOCAL.INDEX>==2) //make last
		IF (<SRC.CTAG0.SKMENU_tinkering_LASTTEN_0>)
			f_skmenu_tinkering_makeitem <SRC.CTAG0.SKMENU_tinkering_LASTTEN_0>
		ELSE
			SRC.CTAG.SKMENU_tinkering_NOTICE You haven't made anything yet.
			DIALOG d_skillmenu_tinkering
		ENDIF
	ELSEIF (<LOCAL.INDEX>==3) //last 10 items made
		SRC.CTAG0.SKMENU_tinkering_LASTCATEGORY=-1
		DIALOG d_skillmenu_tinkering
	ELSEIF (<LOCAL.INDEX>==4) // Toggle use resource hue
		IF (<DEF0.skmenu_tinkering_flags>&010)
		SRC.CTAG0.SKMENU_tinkering_DONOTCOLOR ^= 1
		DIALOG d_skillmenu_tinkering 0, 1
		ENDIF
	ELSEIF (<LOCAL.INDEX>==5) //repair
		IF (<DEF0.skmenu_tinkering_flags>&04)
			SRC.RepairItem
		ENDIF
	ELSEIF (<LOCAL.INDEX>==6) //toggle mark option
		IF (<DEF0.skmenu_tinkering_flags>&01)
			DOSWITCH <SRC.CTAG0.SKMENU_tinkering_MARKOPTION>
			SRC.CTAG.SKMENU_tinkering_MARKOPTION = 1
			SRC.CTAG.SKMENU_tinkering_MARKOPTION = 2
			SRC.CTAG.SKMENU_tinkering_MARKOPTION = 0
			ENDDO
		ENDIF
		DIALOG d_skillmenu_tinkering
	ELSEIF (<LOCAL.INDEX>==8) //enhance
		IF (<DEF0.skmenu_tinkering_flags>&08)
			f_skmenu_tinkering_enhance
		ENDIF
	ELSEIF (<LOCAL.INDEX>==9) // Toggle use resource hue (subres2 page)
		IF (<DEF0.skmenu_tinkering_flags>&010)
		SRC.CTAG0.SKMENU_tinkering_DONOTCOLOR ^= 1
		DIALOG d_skillmenu_tinkering 0, 2
		ENDIF
	ENDIF
ENDIF

