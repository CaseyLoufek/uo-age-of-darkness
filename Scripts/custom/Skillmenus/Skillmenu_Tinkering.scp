//MAIN FUNCTIONS
//Here there are the "core" functions that control the crafting procedure. 
//////////////////////////////////////////////////////////////////////////////////////////////////////////////

//This is the main craft function
[FUNCTION f_skmenu_tinkering_makeitem]
//preliminary checks
IF (<SRC.ACTION>!=-1) || (<SRC.FINDID.i_tinkering_craft>)
	SRC.SYSMESSAGE You must wait to perform another action
	RETURN 1
ENDIF
IF !(<SRC.CANMAKESKILL <ARGS>>)
	SRC.CTAG0.SKMENU_tinkering_NOTICE You don't have the required skills to attempt this item.
	DIALOG d_skillmenu_tinkering
	RETURN 1
ENDIF

//check resources
//check resources
	IF (<SRC.Ctag0.SKMENU_SUBRES_SKILL>)
		LOCAL.RESOURCES=<f_resource_replace <ARGS>,<SRC.dCTAG0.SKMENU_SUBRES_BASE>,<SRC.dCTAG0.SKMENU_SUBRES>>
	ELSE
		LOCAL.RESOURCES=<SERV.ITEMDEF.<ARGS>.RESOURCES>
	ENDIF

IF !(<SRC.RESTEST <LOCAL.RESOURCES>>)
	SRC.Ctag0.SKMENU_TINKERING_NOTICE You don't have the resources required to make that item.
	DIALOG d_skillmenu_TINKERING
	RETURN 1
ENDIF
SRC.CONSUME <LOCAL.RESOURCES>

//update the "last ten" list
IF (<ARGS>!=<SRC.CTAG0.SKMENU_tinkering_LASTTEN_0>) 
	FOR 9 1
		TRY SRC.CTAG0.SKMENU_tinkering_LASTTEN_<dLOCAL._FOR> = <SRC.CTAG.SKMENU_tinkering_LASTTEN_<EVAL <LOCAL._FOR>-1>>
	ENDFOR
	SRC.CTAG0.SKMENU_tinkering_LASTTEN_0 <ARGS>
ENDIF

//start crafting
SERV.NEWITEM i_tinkering_craft
NEW.CONT=<SRC.UID>
NEW.MORE=<SRC.CTAG0.SKMENU_SUBRES>
NEW.LINK=<UID> //linked to the tool
NEW.TIMER=1
NEW.TAG.ITEM=<ARGS>
SRC.ANIM 33
SRC.EVENTS +e_tinkering_crafting

//This is the memory item used for the crafting
[ITEMDEF i_tinkering_craft]
ID=02007
NAME=tinkering craft memory
TYPE=t_eq_script

ON=@CREATE
MOREX={2 4}

ON=@TIMER	
CONT.SFX 055
CONT.ANIM 33
MOREX -= 1
IF (<MOREX>)
	TIMER 1
	RETURN 1
ENDIF
LOCAL.CHANCE=<CONT.f_skmenu_tinkering_successchance <TAG.ITEM>, <LINK.UID>>
IF (RAND(1000)<<LOCAL.CHANCE>) //success! we can create the item
	SERV.NEWITEM <TAG.ITEM> 
	LOCAL.EXCEP=<CONT.f_skmenu_tinkering_exceptionalchance <TAG.ITEM>, <LINK.UID>>
	VAR.ARGN1=<LOCAL.EXCEP>
	VAR.ARGN2=<MORE>
	LINK.TRIGGER=@MakeItem
	LOCAL.EXCEP=<VAR.ARGN1>
	MORE=<VAR.ARGN2>
	NEW.CONT=<CONT.FINDLAYER.21.UID>
	CONT.SOUND 057
	NEW.TAG.OVERRIDE.RANGE=<RANGE>
	NEW.f_skmenu_tinkering_material <MORE>
	IF (RAND(1000)<<LOCAL.EXCEP>)
		NEW.QUALITY=201
		IF (<CONT.CTAG0.SKMENU_tinkering_MARKOPTION>==0)
			NEW.TAG0.CRAFTEDBY=<CONT.UID>
		ELSEIF (<CONT.CTAG0.SKMENU_tinkering_MARKOPTION>==2)
			CONT.CTAG0.SKMENU_tinkering_TOOL=<LINK.UID>
			TRYSRC <CONT.UID> NEW.DIALOG d_skillmenu_tinkering_querymakersmark
			LOCAL.NODIALOG=1
		ENDIF
		IF (<NEW.ISWEAPON>)
			NEW.NAME Exceptional <NEW.NAME>
			NEW.HITPOINTS += <EVAL <CONT.ARMSLORE>/50>+5
			NEW.TAG0.DAMINCREASE += <EVAL <CONT.ARMSLORE>/50>+5 //exceptional weapons have +20% damage
			new.tag0.modvalue += <EVAL <CONT.ARMSLORE>/50>+5
		ENDIF
	ELSE
		NEW.QUALITY=<EVAL (<LOCAL.CHANCE>+<LOCAL.EXCEP>)/10> //arbitrary formula for quality calculation
	ENDIF
	var.exp = (<eval rand(<NEW.VALUE>+<NEW.tag0.MODVALUE>)/((<cont.level>+1)/2)>)
	expeval <eval <var.exp>>
	cont.sysmessage You have gained <var.expmsg> experience.
	CONT.EXP += <eval <var.exp>>
	NEW.RESENDTOOLTIP
	LINK.HITS -= 1 //damage the tool
	IF (<LINK.HITS><=0)
		LINK.REMOVE
		CONT.SYSMESSAGE You have worn out your tool!
		IF (<NEW.QUALITY>>200) && !(<CONT.CTAG0.SKMENU_tinkering_MARKOPTION>)
			CONT.SYSMESSAGE You create an exceptional quality item and affix your maker's mark.
		ELSEIF (<NEW.QUALITY>>200)
			CONT.SYSMESSAGE You create an exceptional quality item.
		ELSE
			CONT.SYSMESSAGE You create the item.
		ENDIF
		LOCAL.NODIALOG=1
	ELSE
		LINK.RESENDTOOLTIP
		IF (<NEW.QUALITY>>200) && !(<CONT.CTAG0.SKMENU_tinkering_MARKOPTION>)
			CONT.CTAG0.SKMENU_tinkering_NOTICE You create an exceptional quality item and affix your maker's mark.
		ELSEIF (<NEW.QUALITY>>200)
			CONT.CTAG0.SKMENU_tinkering_NOTICE You create an exceptional quality item.
		ELSE
			CONT.CTAG0.SKMENU_tinkering_NOTICE You create the item.
		ENDIF
	ENDIF
	IF (<LOCAL.CHANCE><1000) //gain skill only if the crafting was not trivial
		CONT.SKILLGAIN tinkering <EVAL 10-(<LOCAL.CHANCE>/100)>
	ENDIF
ELSE
	LINK.HITS -= 1
	IF (<LINK.HITS><=0)
		LINK.REMOVE
		CONT.SYSMESSAGE You have worn out your tool!
		CONT.SYSMESSAGE You failed to create the item, and some of your materials are lost.
		LOCAL.NODIALOG=1
	ELSE
		LINK.RESENDTOOLTIP
		CONT.CTAG0.SKMENU_tinkering_NOTICE You failed to create the item, and some of your materials are lost. //actually _all_ materials are lost, since they are consumed when the crafting starts
	ENDIF
	IF (<CONT.tinkering><30.0) //skill gain on failure only under 30.0 tinkering
		CONT.SKILLGAIN tinkering 1
	ENDIF
ENDIF
IF !(<LOCAL.NODIALOG>)
	TRYSRC <CONT.UID> LINK.DIALOG d_skillmenu_tinkering
ENDIF
REMOVE
RETURN 1

